{
  "workflow_description": {
    "name":"alignment_qc",
    "version": 1.0,
    "label":"Alignment QC",
    "type":"alignment_qc",
    "inputs":[
      "qc_reports/*",
      "mapped/*",
      "*/{sample}*fastq.gz"
    ],
    "outputs":[
      "qc_reports/*",
      "mapped/*.bam*",
      "logs/*"
    ],
    "report_index": "qc_reports/final_alignment_report.html",
    "reports":[
      "qc_reports/final_alignment_report.html",
      "qc_reports/all_samples/*.html",
      "qc_reports/all_samples/*.pdf"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "requested_params": [
    "is_paired",
    "UMI",
    "umi_usage",
    "reference",
    "lib_ROI",
    "trim_adapters",
    "biobloom",
    "feature_count",
    "RSEM",
    "salmon_align",
    "salmon_map",
    "kallisto"
  ],
  "gui_params" : {
    "primary": {},
    "detailed": {
      "qc_samtools": {
        "label": "QC samtools",
        "type": "bool",
        "default": true
      },
      "qc_qualimap_DNA": {
        "label": "QC qualimap DNA",
        "type": "bool",
        "default": false
      },
      "qc_picard_DNA": {
        "label": "QC picard DNA",
        "type": "bool",
        "default": false
      },
      "cross_sample_correlation": {
        "label": "Cross sample correlation",
        "type": "bool",
        "default": false
      },
      "qc_dupradar_RNA": {
        "label": "QC dupradar RNA",
        "type": "bool",
        "default": true
      },
      "qc_qualimap_RNA": {
        "label": "QC qualimap RNA",
        "type": "bool",
        "default": true
      },
      "qc_picard_RNA": {
        "label": "QC picard RNA",
        "type": "bool",
        "default": true
      },
      "qc_biotypes_RNA": {
        "label": "QC biotypes RNA",
        "type": "bool",
        "default": true
      },
      "qc_fastq_screen_RNA": {
        "label": "QC fastq screen RNA",
        "type": "bool",
        "default": true
      },
      "qc_RSeQC_RNA": {
        "label": "QC RSeQC RNA",
        "type": "bool",
        "default": true
      },
      "chip_extra_qc": {
        "label": "ChIP-seq additional QC",
        "type": "bool",
        "default": false
      }
    }
  }
}


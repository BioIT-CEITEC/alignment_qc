{
  "workflow_description": {
    "name":"alignment_qc",
    "version": 1.0,
    "label":"Alignment QC",
    "type":"alignment_qc",
    "inputs":[
      "qc_reports/{sample}/raw_fastqc/fastqc*",
      "mapped/{sample}.bam"

    ],
    "outputs":[
      "qc_report/*"
    ]
  },
  "general_params": [
    "library_name",
    "sample_name",
    "lib_forward_read_length",
    "lib_reverse_read_length"
  ],
  "gui_params" : {
    "primary": {
      "lib_ROI": {
        "label": "Regions of interest",
        "type": "enum",
        "default": "wgs",
        "list": {
          "wgs": "WGS or no DNA panel",
          "GRCh37-p13": {
            "TP53_amplicon": "TP53 amplicon",
            "BRONCO": "BRONCO",
            "MedExome_GRCh37": "MedExome GRCh37",
            "TruSeq_Exome": "TruSeq Exome",
            "OncoZoom": "OncoZoom"
          },
          "GRCh38-p10": {
            "cosimo_amplicon": "cosimo_amplicon",
            "MedExome_GRCh38": "MedExome_GRCh38",
            "QIAseq": "QIAseq",
            "RNA": "RNA",
            "uni_exome": "uni_exome"
          }
        }
      },
      "reference": {
        "label": "Genomic Reference",
        "type": "enum",
        "default": "GRCh38-p10",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "lib_ROI": "wgs"
            }
          }
        },
        "list": {
          "Homo sapiens": {
            "GRCh37-p13": "GRCh37-p13",
            "GRCh38-p10": "GRCh38-p10"
          },
          "Mus musculus": {
            "GRCm38.p6-93": "GRCm38.p6-93"
          },
          "Arabidopsis thaliana": {
            "TAIR10-31": "TAIR10-31"
          },
          "Nothobranchius furzeri": {
            "Nfu_20150922": "Nfu_20150922",
            "NFZv2.0": "NFZv2.0"
          },
          "Rattus norvegicus": {
            "Rnor_6.0-91": "Rnor_6.0-91"
          },
          "Drosophila melanogaster": {
            "BDGP6-90": "BDGP6-90",
            "BDGP6-99": "BDGP6-99"
          },
          "Canis familiaris": {
            "CanFam3.1-90": "CanFam3.1-90",
            "CanFam3.1-101": "CanFam3.1-101"
          },
          "Trichinella spiralis": {
            "Tspiralis1-37": "Tspiralis1-37"
          },
          "Brassica napus": {
            "AST_PRJEB5043_v1": "AST_PRJEB5043_v1",
            "Bra_napus_v2": "Bra_napus_v2"
          },
          "Saccharomyces cerevisiae": {
            "R64-1-1.100": "R64-1-1.100"
          },
          "Prorhinotermes simplex": {
            "Peska_transcriptome": "Peska_transcriptome"
          },
          "Zootermopsis nevadensis": {
            "Znev_1_0": "Znev_1_0"
          },
          "Caenorhabditis elegans": {
            "WBcel235-102": "WBcel235-102"
          },
          "Danio rerio": {
            "GRCz11-102": "GRCz11-102"
          },
          "Cyprinus carpio": {
            "Common_carp_ncbi": "Common_carp_ncbi",
            "Hebao_red_carp_1.0-103": "Hebao_red_carp_1.0-103"
          }
        }
      }
    },
    "detailed": {
      "qc_samtools_DNA": {
        "label": "QC samtools DNA",
        "type": "bool",
        "default": true
      },
      "qc_qualimap_DNA": {
        "label": "QC qualimap DNA",
        "type": "bool",
        "default": true
      },
      "qc_picard_DNA": {
        "label": "QC picard DNA",
        "type": "bool",
        "default": true
      },
      "snp_vaf_compute": {
        "label": "SNP variant frequency compute",
        "type": "bool",
        "default": true
      },
      "cross_sample_correlation": {
        "label": "Cross sample correlation",
        "type": "bool",
        "default": true
      }
    }
  }
}

